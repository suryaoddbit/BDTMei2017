<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="beginner.iak.com.simplelistview.RootActivity">

    <Button
        android:id="@+id/btnCustomList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Custom List Adapter"
        android:textStyle="bold"
        android:textSize="30dp"/>
    <Button
        android:id="@+id/btnRecycleAdapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recycle List Adapter"
        android:textStyle="bold"
        android:textSize="30dp"/>
    <Button
        android:id="@+id/btnVolley"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volley"
        android:textStyle="bold"
        android:textSize="30dp"/>

</LinearLayout>
